<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" x:Class="NES_Emulator.Views.GamePage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0"/>
    </ContentPage.Padding>
    <StackLayout>
        <Image Source="{Binding GameScreen}" HeightRequest="400"/>
        <Button Text="UP" Command="{Binding UpButtonCommand}"/>
        <Button Text="DOWN" Command="{Binding DownButtonCommand}"/>
        <Button Text="LEFT" Command="{Binding LeftButtonCommand}"/>
        <Button Text="RIGHT" Command="{Binding RightButtonCommand}"/>
    </StackLayout>
</ContentPage>
